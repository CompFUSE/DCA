{
    "output": {
        "directory": "./",
        "filename-qmc": "qmc.hdf5",
        "dump-cluster-Greens-functions": true
    },

    "physics": {
        "beta": 1.,
        "density": 1.0,
        "chemical-potential": 0.
    },

    "Rasha-Hubbard-model": {
        "t": 1.,
        "h" : 0.1,
        "lambda" : 0.5,
        "U": 8.
    },

    "DCA": {
        "iterations": 1,
        "self-energy-mixing-factor": 1.,
        "interacting-orbitals": [0, 1]
    },

    "domains": {
        "real-space-grids": {
            "cluster": [[6, 0],
                        [0, 6]]
        },

        "imaginary-time": {
            "sp-time-intervals": 512
        },

        "imaginary-frequency": {
            "sp-fermionic-frequencies": 512,
            "four-point-fermionic-frequencies": 2
        }
    },

    "four-point": {
        "type": "PARTICLE_PARTICLE_UP_DOWN"
    },


    "Monte-Carlo-integration": {
        "seed": 985456376,
        "warm-up-sweeps": 50,
        "sweeps-per-measurement": 1,
        "measurements": 500,
        "threaded-solver" : {
            "walkers" : 2,
            "accumulators" : 2,
            "fix-meas-per-walker" : true,
            "shared-walk-and-accumulation-thread" : true
        }
    },

    "CT-AUX": {
        "expansion-parameter-K": 1.,
        "initial-configuration-size": 0,
        "max-submatrix-size": 16
    }
}
