{
  "output" :
  {
    "output-format"         : "HDF5",

    "output-QMC" : "output_QMC.hdf5"
  },

  "physics" :
  {
    "beta"                      :  2,
    "chemical-potential"        : 0
  },

  "Rashba-Hubbard-model":
  {
      "t"       : 1,
      "h"       : 0,
      "lambda"  : 0.5,
      "U"       : 6.0
  },

  "domains": {
    "real-space-grids": {
      "cluster": [[2, 2],
		  [2, -2]],
	"sp-host": [[10, 10], [10, -10]],
	"tp-host": [[4,4],[4,-4]]
    },

    "imaginary-time": {
      "sp-time-intervals": 512
    },

    "imaginary-frequency": {
      "sp-fermionic-frequencies": 512,
      "four-point-fermionic-frequencies" : 1
    }
  },

  "four-point": {
    "type": "NONE",
    "frequency-transfer": 0
  },


  "Monte-Carlo-integration" :
  {
    "Sigma-file" : "zero",

    "warm-up-sweeps"         : 100,
    "sweeps-per-measurement" : 1,
    "measurements-per-process-and-accumulator" : 500,
    "seed" : 0,

    "threaded-solver" : {
      "accumulators" : 3
    }
  },
  "CT-AUX" :
  {
    "initial-configuration-size" :5
  }
}
