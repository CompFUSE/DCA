{
    "DCA": {
        "initial-self-energy": "./T=0.5/dca.hdf5",
        "iterations": 3,
        "accuracy": 1.e-3,
        "self-energy-mixing-factor": 0.5,
        "interacting-orbitals": [0, 1, 2],

        "do-finite-size-QMC": false,

        "coarse-graining": {
            "do-simple-q-points-summation" : false,
            "k-mesh-recursion": 3,
            "periods": 2,
            "quadrature-rule": 2,
            "threads": 8,
            "tail-frequencies": 10
        },

        "DCA+": {
            "do-DCA+": true,
            "deconvolution-iterations": 32,
            "deconvolution-tolerance": 1.e-4,
            "HTS-approximation": true,
            "HTS-threads": 8
        }
    }
}
