{
    "output": {
        "directory": "./",
        "output-format": "ADIOS2",
        "filename-dca": "conv.bp",
        "dump-lattice-self-energy": true,
        "dump-cluster-Greens-functions": true,
	"dump-Gamma-lattice": true,
	"dump-chi-0-lattice": true
    },
    "physics": {
        "beta": 2.5,
        "density": 1.0,
        "chemical-potential": 0.0,
        "adjust-chemical-potential": false
    },
    "single-band-Hubbard-model":
    {
        "t"       : 1.,
        "t-prime": 0,
        "U"       : 20
    },    
    "DCA": {
        "initial-self-energy": "zero",
        "iterations": 10,
        "self-energy-mixing-factor": 0.8,
        "interacting-orbitals": [0],
        "coarse-graining": {
            "k-mesh-recursion": 3,
            "periods": 0,
            "quadrature-rule": 1,
            "threads": 6,
            "tail-frequencies": 10
        },
        "DCA+": {
            "do-DCA+": false,
            "deconvolution-iterations": 16,
	    "deconvolution-tolerance": 1.e-3,
            "HTS-approximation": true,
	    "HTS-threads": 6
        }
    },
        "domains": {
        "real-space-grids": {
            "cluster": [[1, 0],
                        [0, 1]],
            "sp-host": [[10,10],
                        [10,-10]],
            "tp-host": [[8,8],
                        [8,-8]]
        },

        "imaginary-time": {
            "sp-time-intervals": 256,
            "time-intervals-for-time-measurements": 32
        },

        "imaginary-frequency": {
            "sp-fermionic-frequencies": 512,
            "four-point-fermionic-frequencies" : 256,
            "HTS-bosonic-frequencies": 32
        },
        "real-frequency": {
            "min": -10,
            "max": 10,
            "frequencies": 256,
            "imaginary-damping": 0.01
        }
    },
    "Monte-Carlo-integration" :
    {
        "warm-up-sweeps"         : 500,
        "sweeps-per-measurement" : 1,
        "measurements" : 200000,
        "seed" : 9854546376,
        "threaded-solver" : {
            "accumulators" : 4,
            "walkers" :  4,
            "shared-walk-and-accumulation-thread" : true
        }
    },
"CT-INT": {
        "initial-configuration-size": 1000,
        "alpha-dd-pos": 0.1,
        "alpha-dd-neg": 0,
        "alpha-ndd" : 0.01,
        "adjust-alpha-dd" : true,
        "double-update-probability" : 0.5,
        "all-sites-partnership" : false,
        "max-submatrix-size": 256
    }
}
